image: rancher/hardened-kubernetes:{{build.tag}}
manifests:
  - image: rancher/hardened-kubernetes:{{build.tag}}-linux-amd64
    platform:
      architecture: amd64
      os: linux
  - image: rancher/hardened-kubernetes:{{build.tag}}-linux-arm64
    platform:
      architecture: arm64
      os: linux
  - image: rancher/hardened-kubernetes:{{build.tag}}-linux-s390x
    platform:
      architecture: s390x
      os: linux
